<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#484e61">
        
        <Button android:id="@+id/btn_switch_city"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/home" />
        
        <TextView android:id="@+id/tv_city"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:textColor="#fff"
	        android:textSize="24sp" />
        
        <Button android:id="@+id/btn_refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/refresh" />
        
    </RelativeLayout>
    
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#27a5f9">
        
        <TextView android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textColor="#fff"
	        android:textSize="18sp"
	        android:text="2016-04-05 23:09" />
        
        <ImageView android:id="@+id/iv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        
        <TextView android:id="@+id/tv_tmp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:layout_gravity="center"
	        android:textColor="#fff"
	        android:textSize="50sp"
	        android:text="25℃ " />
        
        <TextView android:id="@+id/tv_tmp_range"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textColor="#fff"
	        android:textSize="18sp"
	        android:text="20℃ ~30℃ " />
        
        <TextView android:id="@+id/tv_day_of_week"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textColor="#fff"
	        android:textSize="20sp"
	        android:text="周二" />
        
        <TextView android:id="@+id/tv_description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textColor="#fff"
	        android:textSize="20sp"
	        android:text="多云" />
        
        <TextView android:id="@+id/tv_more"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_gravity="center"
	        android:textColor="#fff"
	        android:textSize="16sp"
	        android:text="@string/more_detail" />
        
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#33000000">
        
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView android:id="@+id/tv_day0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="今天" />
            
            <ImageView android:id="@+id/iv_weather0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/t100"/>
            
            <TextView android:id="@+id/tv_temp_range0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="20℃ ~30℃ " />
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView android:id="@+id/tv_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="今天" />
            
            <ImageView android:id="@+id/iv_weather1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/t100"/>
            
            <TextView android:id="@+id/tv_temp_range1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="20℃ ~30℃ " />
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView android:id="@+id/tv_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="今天" />
            
            <ImageView android:id="@+id/iv_weather2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/t100"/>
            
            <TextView android:id="@+id/tv_temp_range2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="20℃ ~30℃ " />
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView android:id="@+id/tv_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="今天" />
            
            <ImageView android:id="@+id/iv_weather3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/t100"/>
            
            <TextView android:id="@+id/tv_temp_range3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:text="20℃ ~30℃ " />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <!-- <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#27a5f9">
        
        <TextView android:id="@+id/tv_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#fff"
            android:textSize="18sp" />
        
    </ScrollView> -->

</LinearLayout>
